/* Generic components by class name patterns */
[class*="component"],
[class*="-component"],
[class*="widget"],
[class*="-widget"] {
    position: relative !important;
}

/* Catch-all for any potentially missed reusable components */
div[class*="reusable"],
div[class*="shared"],
section[class*="component"],
section[class*="widget"],
article[class*="component"] {
    margin: 20px !important;
    border: 3px solid yellow !important;
    position: relative !important;
}

div[class*="reusable"]:before,
div[class*="shared"]:before,
section[class*="component"]:before,
section[class*="widget"]:before,
article[class*="component"]:before {
    content: "REUSABLE COMPONENT" !important;
    position: absolute !important;
    top: -20px !important;
    left: 10px !important;
    background: yellow !important;
    color: black !important;
    padding: 2px 10px !important;
    font-size: 12px !important;
    font-weight: bold !important;
    z-index: 9999 !important;
}

/* Ensure labels are visible */
