<script>
// Apply saved theme on load
document.addEventListener('DOMContentLoaded', function() {
    const savedTheme = localStorage.getItem('preferred-theme') || 'light';
    
    // Update icons based on saved theme
    const themeIcon = document.getElementById('theme-icon');
    const themeIconUser = document.getElementById('theme-icon-user');
    
    if (themeIcon) {
        themeIcon.className = savedTheme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
    }
    if (themeIconUser) {
        themeIconUser.className = savedTheme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
    }
});

// Use safe onclick approach
document.addEventListener('DOMContentLoaded', function() {
    // Find all theme toggle buttons and add safe event listeners
    const toggleButtons = document.querySelectorAll('[onclick*="toggleTheme"]');
    toggleButtons.forEach(button => {
        button.onclick = function(e) {
            e.preventDefault();
            if (typeof window.toggleTheme === 'function') {
                window.toggleTheme();
            }
        };
    });
});
</script>