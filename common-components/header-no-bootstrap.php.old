<script>
// Dark mode toggle function for no-bootstrap header
function toggleTheme() {
    const html = document.documentElement;
    const currentTheme = html.getAttribute('data-theme') || 'light';
    const newTheme = currentTheme === 'light' ? 'dark' : 'light';
    
    html.setAttribute('data-theme', newTheme);
    localStorage.setItem('preferred-theme', newTheme);
    
    // Update theme icons
    const themeIcon = document.getElementById('theme-icon');
    const themeIconUser = document.getElementById('theme-icon-user');
    
    if (themeIcon) {
        themeIcon.className = newTheme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
    }
    if (themeIconUser) {
        themeIconUser.className = newTheme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
    }
}

// Apply saved theme on load
document.addEventListener('DOMContentLoaded', function() {
    const savedTheme = localStorage.getItem('preferred-theme') || 'light';
    document.documentElement.setAttribute('data-theme', savedTheme);
    
    // Update icons based on saved theme
    const themeIcon = document.getElementById('theme-icon');
    const themeIconUser = document.getElementById('theme-icon-user');
    
    if (themeIcon) {
        themeIcon.className = savedTheme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
    }
    if (themeIconUser) {
        themeIconUser.className = savedTheme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
    }
});
</script>

